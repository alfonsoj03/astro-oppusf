---
import {
    Download,
    Check,
    ChevronLeft,
    ChevronRight,
    ShoppingCart,
} from "lucide-astro";

interface Props {
    category: string;
    slug: string;
    title: string;
    seriesTitle: string;
    seriesSubtitle: string;
    description: string;
    previousModel?: string;
    image: string;
    specifications: { label: string; value: string }[];
    technicalDescription: string[];
    technicalImages: { title: string; image: string }[];
    downloads?: { title: string; url: string }[];
    accessories?: { image: string; title: string; annotation?: string }[];
}

const {
    category,
    slug,
    title,
    seriesTitle,
    seriesSubtitle,
    description,
    previousModel,
    image,
    specifications,
    technicalDescription,
    technicalImages,
    downloads = [],
    accessories = [],
} = Astro.props;

const allImages = [
    { title: "Producto Principal", image: image },
    ...technicalImages,
];
---

<section class="bg-white pt-32 pb-12">
    <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 mb-8">
            {/* Galería de Imágenes */}
            <div
                class="flex flex-col gap-4 animate-slide-right opacity-0 -translate-x-10 transition-all duration-1000 ease-out"
            >
                {/* Imagen Principal */}
                <div
                    class="bg-gray-50 rounded-lg relative overflow-hidden group"
                >
                    {
                        /* Imagen Espaciadora (Define el tamaño basado en la primera imagen) */
                    }
                    <img
                        src={allImages[0].image}
                        alt=""
                        class="w-full h-auto invisible relative z-0"
                        aria-hidden="true"
                    />

                    {/* Tag del título */}
                    <div
                        class="absolute top-4 left-1/2 -translate-x-1/2 bg-white/90 backdrop-blur-sm px-4 py-1 rounded-full shadow-sm border border-gray-100 z-20"
                    >
                        <span
                            id="gallery-title"
                            class="text-xs font-bold uppercase tracking-wider text-gray-800"
                        >
                            {allImages[0].title}
                        </span>
                    </div>

                    {/* Botón Anterior */}
                    <button
                        id="prev-btn"
                        class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white text-black p-2 rounded-full shadow-md opacity-0 group-hover:opacity-100 transition-all duration-300 z-30"
                        aria-label="Imagen anterior"
                    >
                        <ChevronLeft class="w-6 h-6" />
                    </button>

                    {/* Botón Siguiente */}
                    <button
                        id="next-btn"
                        class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white text-black p-2 rounded-full shadow-md opacity-0 group-hover:opacity-100 transition-all duration-300 z-30"
                        aria-label="Siguiente imagen"
                    >
                        <ChevronRight class="w-6 h-6" />
                    </button>

                    <img
                        id="main-image"
                        src={allImages[0].image}
                        alt={allImages[0].title}
                        class="absolute inset-0 w-full h-full object-cover transition-opacity duration-300 z-10"
                    />
                </div>
            </div>

            {/* Información del producto */}
            <div
                class="flex flex-col animate-slide-left opacity-0 translate-x-10 transition-all duration-1000 ease-out"
            >
                {/* Categoría */}
                <p class="text-sm tracking-wider text-gray-600 mb-4 uppercase">
                    {category}
                </p>

                {/* Título del producto */}
                <h1 class="text-[#FF8351] mb-6 text-4xl font-bold">
                    {title}
                </h1>

                {/* Descripción del producto */}
                <div class="mb-5">
                    <h2 class="mb-3 text-2xl font-bold">
                        {seriesTitle}
                    </h2>
                    <p class="text-sm text-gray-500 mb-6">
                        {seriesSubtitle}
                    </p>
                    <p class="text-gray-700 leading-relaxed text-base mb-5">
                        {description}
                    </p>

                    {/* Miniaturas (Movidas a la derecha) */}
                    <div class="grid grid-cols-5 gap-3 mb-6">
                        {
                            allImages.map((img, index) => (
                                <button
                                    class:list={[
                                        "bg-gray-50 rounded-lg overflow-hidden aspect-square border-2 transition-all duration-200 gallery-thumb relative",
                                        index === 0
                                            ? "border-[#FF8351] opacity-100"
                                            : "border-transparent opacity-50 hover:opacity-100",
                                    ]}
                                    data-index={index}
                                    data-image={img.image}
                                    data-title={img.title}
                                    aria-label={`Ver ${img.title}`}
                                >
                                    <img
                                        src={img.image}
                                        alt={img.title}
                                        class="w-full h-full object-cover"
                                    />
                                </button>
                            ))
                        }
                    </div>

                    {/* Selector de Cantidad y Botón de Cotización */}
                    <div
                        class="flex flex-col sm:flex-row items-center gap-6 mb-8"
                    >
                        <div class="flex items-center gap-4 w-full sm:w-auto">
                            <div
                                class="flex items-center border border-gray-300 overflow-hidden"
                            >
                                <button
                                    id="decrease-qty"
                                    class="w-10 h-10 flex items-center justify-center hover:bg-gray-100 transition-colors text-gray-600 font-bold text-lg"
                                    aria-label="Disminuir cantidad"
                                >
                                    -
                                </button>
                                <input
                                    type="number"
                                    id="qty-input"
                                    value="1"
                                    min="1"
                                    class="w-12 h-10 text-center border-x border-gray-300 text-gray-900 font-medium focus:outline-none appearance-none m-0 p-0"
                                />
                                <button
                                    id="increase-qty"
                                    class="w-10 h-10 flex items-center justify-center hover:bg-gray-100 transition-colors text-gray-600 font-bold text-lg"
                                    aria-label="Aumentar cantidad"
                                >
                                    +
                                </button>
                            </div>
                        </div>

                        <button
                            id="add-to-cart-btn"
                            data-slug={slug}
                            class="w-full sm:flex-1 px-8 py-[11px] bg-[#FF8351] text-white hover:bg-[#e6744a] transition-all duration-300 font-bold text-sm uppercase tracking-wide shadow-sm flex items-center justify-center gap-2 disabled:opacity-70 disabled:cursor-not-allowed"
                        >
                            <span
                                id="btn-content"
                                class="flex items-center gap-2"
                            >
                                <ShoppingCart class="w-5 h-5" />
                                <span>Agregar a carrito de cotización</span>
                            </span>
                            <span id="btn-spinner" class="hidden">
                                <svg
                                    class="animate-spin h-5 w-5 text-white"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                >
                                    <circle
                                        class="opacity-25"
                                        cx="12"
                                        cy="12"
                                        r="10"
                                        stroke="currentColor"
                                        stroke-width="4"></circle>
                                    <path
                                        class="opacity-75"
                                        fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                    ></path>
                                </svg>
                            </span>
                            <span
                                id="btn-success"
                                class="hidden flex items-center gap-2"
                            >
                                <Check class="w-5 h-5" />
                                <span>Añadido!</span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>

            {/* Sección de Especificaciones con tabla */}
            <div
                class="mb-12 animate-fade-up opacity-0 translate-y-10 transition-all duration-1000 ease-out delay-300"
            >
                <h2 class="mb-6 text-4xl font-light font-outfit">
                    Información técnica
                </h2>
                <div class="space-y-4 mb-12">
                    {
                        technicalDescription.map((paragraph) => (
                            <p class="text-gray-700 leading-relaxed">
                                {paragraph}
                            </p>
                        ))
                    }
                </div>
            </div>

            {/* Sección de Información técnica */}
            <div
                class="mb-12 max-w-xl animate-fade-up opacity-0 translate-y-10 transition-all duration-1000 ease-out delay-500"
            >
                <h2 class="mb-6 max-w-xl">Especificaciones</h2>
                <div class="border-t border-gray-200">
                    {
                        specifications.map((spec) => (
                            <div class="grid grid-cols-2 py-4 border-b border-gray-200">
                                <div class="text-gray-600">{spec.label}</div>
                                <div class="text-gray-900 text-right">
                                    {spec.value}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
            <div
                class="mb-8 md:col-span-2 animate-fade-up opacity-0 translate-y-10 transition-all duration-1000 ease-out delay-700"
            >
                {/* Accesorios */}
                {
                    accessories.length > 0 && (
                        <div class="mb-12">
                            <h2 class="mb-6 text-4xl font-light font-outfit">
                                Accesorios
                            </h2>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                                {accessories.map((accessory) => (
                                    <div class="flex flex-col items-center text-center group">
                                        <div class="bg-gray-50 rounded-xl p-6 mb-4 w-full aspect-square flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
                                            <img
                                                src={accessory.image}
                                                alt={accessory.title}
                                                class="max-w-full max-h-full object-contain"
                                            />
                                        </div>
                                        <h3 class="text-lg font-normal font-outfit text-gray-500 uppercase tracking-wide">
                                            {accessory.title}
                                        </h3>
                                        {accessory.annotation && (
                                            <p class="text-md text-gray-500 italic">
                                                {accessory.annotation}
                                            </p>
                                        )}
                                    </div>
                                ))}
                            </div>
                        </div>
                    )
                }

                {/* Descargas */}
                {
                    downloads.length > 0 && (
                        <div class="mb-12">
                            <h2 class="mb-6 text-4xl font-light font-outfit">
                                Archivos
                            </h2>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                                {downloads.map((download) => (
                                    <div>
                                        <p class="text-sm font-bold text-zinc-900 mb-4 uppercase tracking-wide">
                                            {download.title}
                                        </p>
                                        <a
                                            href={download.url}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="w-full px-6 py-3 border border-[#FF8351] text-[#FF8351] rounded-lg hover:bg-[#FF8351] hover:text-white transition-all duration-300 flex items-center justify-center gap-2 font-bold text-sm uppercase tracking-widest group"
                                        >
                                            <Download class="w-4 h-4 group-hover:animate-bounce" />
                                            Descargar PDF
                                        </a>
                                    </div>
                                ))}
                            </div>
                        </div>
                    )
                }
            </div>
        </div>
    </div>

    <script>
        const mainImage = document.getElementById(
            "main-image",
        ) as HTMLImageElement;
        const galleryTitle = document.getElementById("gallery-title");
        const thumbs = document.querySelectorAll(".gallery-thumb");
        const prevBtn = document.getElementById("prev-btn");
        const nextBtn = document.getElementById("next-btn");

        // Quantity Selector Logic
        const decreaseBtn = document.getElementById("decrease-qty");
        const increaseBtn = document.getElementById("increase-qty");
        const qtyInput = document.getElementById(
            "qty-input",
        ) as HTMLInputElement;

        if (decreaseBtn && increaseBtn && qtyInput) {
            decreaseBtn.addEventListener("click", () => {
                const currentVal = parseInt(qtyInput.value) || 1;
                if (currentVal > 1) {
                    qtyInput.value = (currentVal - 1).toString();
                }
            });

            increaseBtn.addEventListener("click", () => {
                const currentVal = parseInt(qtyInput.value) || 0;
                qtyInput.value = (currentVal + 1).toString();
            });

            // Validate manual input
            qtyInput.addEventListener("change", () => {
                let val = parseInt(qtyInput.value);
                if (isNaN(val) || val < 1) {
                    qtyInput.value = "1";
                }
            });
        }

        let currentIndex = 0;
        const totalImages = thumbs.length;

        function updateGallery(index: number) {
            const thumb = thumbs[index] as HTMLElement;
            const newImage = thumb.getAttribute("data-image");
            const newTitle = thumb.getAttribute("data-title");

            if (mainImage && newImage) {
                mainImage.style.opacity = "0";
                setTimeout(() => {
                    mainImage.src = newImage;
                    mainImage.style.opacity = "1";
                }, 150);
            }

            if (galleryTitle && newTitle) {
                galleryTitle.textContent = newTitle;
            }

            thumbs.forEach((t) => {
                t.classList.remove("border-[#FF8351]", "opacity-100");
                t.classList.add("border-transparent", "opacity-50");
            });
            thumb.classList.remove("border-transparent", "opacity-50");
            thumb.classList.add("border-[#FF8351]", "opacity-100");

            currentIndex = index;
        }

        thumbs.forEach((thumb, index) => {
            thumb.addEventListener("click", () => {
                updateGallery(index);
            });
        });

        prevBtn?.addEventListener("click", () => {
            const newIndex = (currentIndex - 1 + totalImages) % totalImages;
            updateGallery(newIndex);
        });

        nextBtn?.addEventListener("click", () => {
            const newIndex = (currentIndex + 1) % totalImages;
            updateGallery(newIndex);
        });

        // Add to Cart Logic
        const addToCartBtn = document.getElementById(
            "add-to-cart-btn",
        ) as HTMLButtonElement;
        const btnContent = document.getElementById("btn-content");
        const btnSpinner = document.getElementById("btn-spinner");
        const btnSuccess = document.getElementById("btn-success");

        addToCartBtn?.addEventListener("click", () => {
            if (!btnContent || !btnSpinner || !btnSuccess) return;

            // Loading state
            addToCartBtn.disabled = true;
            btnContent.classList.add("hidden");
            btnSpinner.classList.remove("hidden");

            // Simulate network request
            setTimeout(() => {
                // Get current quantity
                const qtyInput = document.getElementById(
                    "qty-input",
                ) as HTMLInputElement;
                const quantity = parseInt(qtyInput?.value || "1");
                const slug = addToCartBtn.dataset.slug;

                if (slug) {
                    // Get existing cart
                    const cart = JSON.parse(
                        localStorage.getItem("opplux_cart") || "[]",
                    );

                    // Check if product exists
                    const existingItemIndex = cart.findIndex(
                        (item: any) => item.slug === slug,
                    );

                    if (existingItemIndex > -1) {
                        // Update quantity
                        cart[existingItemIndex].quantity += quantity;
                    } else {
                        // Add new item
                        cart.push({ slug, quantity });
                    }

                    // Save back to localStorage
                    localStorage.setItem("opplux_cart", JSON.stringify(cart));
                }

                // Success state
                btnSpinner.classList.add("hidden");
                btnSuccess.classList.remove("hidden");

                // Change button color to green
                addToCartBtn.classList.remove(
                    "bg-[#FF8351]",
                    "hover:bg-[#e6744a]",
                );
                addToCartBtn.classList.add(
                    "bg-green-600",
                    "hover:bg-green-700",
                );

                // Dispatch event for Header
                window.dispatchEvent(new CustomEvent("add-to-cart"));

                // Reset after delay
                setTimeout(() => {
                    btnSuccess.classList.add("hidden");
                    btnContent.classList.remove("hidden");
                    addToCartBtn.disabled = false;

                    // Revert button color
                    addToCartBtn.classList.add(
                        "bg-[#FF8351]",
                        "hover:bg-[#e6744a]",
                    );
                    addToCartBtn.classList.remove(
                        "bg-green-600",
                        "hover:bg-green-700",
                    );
                }, 2000);
            }, 800);
        });

        // Trigger animations on load
        window.addEventListener("load", () => {
            // Slide animations
            document
                .querySelector(".animate-slide-right")
                ?.classList.remove("opacity-0", "-translate-x-10");
            document
                .querySelector(".animate-slide-left")
                ?.classList.remove("opacity-0", "translate-x-10");

            // Fade up animations
            document.querySelectorAll(".animate-fade-up").forEach((el) => {
                el.classList.remove("opacity-0", "translate-y-10");
            });
        });
    </script>

    <style>
        /* Hide scrollbar for Chrome, Safari and Opera */
        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Hide scrollbar for Firefox */
        input[type="number"] {
            -moz-appearance: textfield;
        }
    </style>
</section>
