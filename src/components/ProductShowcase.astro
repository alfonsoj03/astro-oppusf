---
import { ArrowLeft, ArrowRight } from "lucide-astro";
import bannerImg from "../assets/products_banner.png";

import { supabase } from "../lib/supabase";

interface Props {
    isCategoryPage?: boolean;
    category?: any;
    products?: any[];
    specs?: any[];
    allCategories?: any[];
}

const {
    isCategoryPage = false,
    category: propCategory,
    products: propProducts,
    specs: propSpecs,
    allCategories: propAllCategories,
} = Astro.props;

// Fetch data only if not provided via props
let dbCategories = propAllCategories;
let dbProducts = propProducts;
let dbSpecs = propSpecs;

if (!dbCategories || !dbProducts || !dbSpecs) {
    // Fetch categories
    const { data: fetchedCategories, error: categoriesError } = await supabase
        .from("product_categories")
        .select("*")
        .order("position", { ascending: true });

    if (categoriesError) {
        console.error("Error fetching categories:", categoriesError);
    }
    dbCategories = fetchedCategories || [];

    // Fetch products
    const { data: fetchedProducts, error: productsError } = await supabase
        .from("products")
        .select("*")
        .order("id");

    if (productsError) {
        console.error("Error fetching products:", productsError);
    }
    dbProducts = fetchedProducts || [];

    // Fetch product specs
    const { data: fetchedSpecs, error: specsError } = await supabase
        .from("product_specs")
        .select("*");

    if (specsError) {
        console.error("Error fetching specs:", specsError);
    }
    dbSpecs = fetchedSpecs || [];
}

// Import all images from assets directory for dynamic resolution
const assets = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/*.{png,jpg,jpeg,webp}",
    { eager: true },
);

function resolveAsset(path: string | null) {
    if (!path) return bannerImg.src;
    if (path.startsWith("http")) return path;

    // Try different extensions if needed
    const extensions = [".png", ".jpg", ".jpeg", ".webp", ""];
    for (const ext of extensions) {
        const fullPath = `/src/assets/${path}${ext}`;
        if (assets[fullPath]) return assets[fullPath].default.src;
    }
    return bannerImg.src;
}

// Process data for the UI
const categories = (dbCategories || []).map((cat) => {
    const count = (dbProducts || []).filter(
        (p) => p.category_id === cat.id,
    ).length;
    return {
        id: cat.id,
        name: cat.name,
        slug: cat.slug,
        count: count,
    };
});

// Helper to parse product name for sorting
function parseProductSortKey(name: string) {
    const match = name.match(/^([a-zA-Z\s]+)\s*(\d+)?/);
    if (match) {
        return {
            series: match[1].trim(),
            wattage: match[2] ? parseInt(match[2], 10) : 0,
        };
    }
    return { series: name, wattage: 0 };
}

// Helper to slugify text
function slugify(text: string) {
    return text
        .toString()
        .toLowerCase()
        .trim()
        .replace(/\s+/g, "-")
        .replace(/[^\w\-]+/g, "")
        .replace(/\-\-+/g, "-");
}

// Filter categories to show
const categoriesToShow =
    isCategoryPage && propCategory ? [propCategory] : dbCategories || [];

const productsByCategory = categoriesToShow
    .map((cat) => {
        const catProducts = (dbProducts || []).filter(
            (p) => p.category_id === cat.id,
        );

        // Calculate series counts
        const seriesCounts = new Map<string, number>();
        catProducts.forEach((p) => {
            const { series } = parseProductSortKey(p.name);
            seriesCounts.set(series, (seriesCounts.get(series) || 0) + 1);
        });

        // Sort products
        catProducts.sort((a, b) => {
            const keyA = parseProductSortKey(a.name);
            const keyB = parseProductSortKey(b.name);
            const countA = seriesCounts.get(keyA.series) || 0;
            const countB = seriesCounts.get(keyB.series) || 0;
            if (countA !== countB) return countB - countA;
            if (keyA.series < keyB.series) return -1;
            if (keyA.series > keyB.series) return 1;
            return keyA.wattage - keyB.wattage;
        });

        return {
            id: cat.id,
            category: cat.name,
            slug: cat.slug,
            products: catProducts.map((p) => {
                const productSpecs = (dbSpecs || []).filter(
                    (s) => s.product_id === p.id,
                );
                const recHeight = productSpecs.find(
                    (s) =>
                        s.label === "Rec. height" || s.label === "Rec. Height",
                )?.value;
                const weight = productSpecs.find(
                    (s) => s.label === "Net/Total Weight",
                )?.value;

                return {
                    id: p.id,
                    slug: p.slug,
                    name: p.name,
                    comment: p.efficiency
                        ? `${p.efficiency}`
                        : "Alta Eficiencia",
                    image: resolveAsset(p.main_image),
                    watts: p.led_power,
                    lumens: p.max_luminous_flux,
                    description:
                        p.description_short || p.description_long || "",
                    specs: [
                        p.led_power ? `${p.led_power}` : "",
                        p.efficiency ? `${p.efficiency}` : "",
                        recHeight || "",
                        weight || "",
                    ].filter(Boolean),
                };
            }),
        };
    })
    .filter((group) => group.products.length > 0);

// Banner resolution
const bannerImageSrc =
    isCategoryPage && propCategory?.image
        ? resolveAsset(propCategory.image)
        : bannerImg.src;
---

<section id="productos" class="bg-white">
    {/* Banner Hero Section - Just the image */}
    <div class="relative h-[80vh] min-h-[600px] w-full overflow-hidden">
        {/* Background Image */}
        <img
            src={bannerImageSrc}
            alt={isCategoryPage ? propCategory?.name : "Productos"}
            class="absolute inset-0 w-full h-full object-cover"
        />
    </div>

    {/* Title and Breadcrumb - Outside the banner */}
    <div class="container mx-auto px-6 relative z-10">
        <div class="mb-4 mt-12 animate-fade-in-up">
            {/* Breadcrumb */}
            <div
                class="flex items-center gap-3 text-zinc-500 text-xs uppercase tracking-widest"
            >
                <a href="/" class="hover:text-[#FF8351] transition-colors"
                    >Inicio</a
                >
                <span class="text-[#FF8351]">/</span>
                {
                    isCategoryPage ? (
                        <>
                            <a
                                href="/productos"
                                class="hover:text-[#FF8351] transition-colors"
                            >
                                Productos
                            </a>
                            <span class="text-[#FF8351]">/</span>
                            <span class="text-[#FF8351]">
                                {propCategory?.name}
                            </span>
                        </>
                    ) : (
                        <span class="text-[#FF8351]">Productos</span>
                    )
                }
            </div>
        </div>
    </div>

    {/* Existing Content */}
    <div class="pt-6 pb-12">
        <div class="container mx-auto px-6">
            <div class="flex flex-col xl:flex-row lg:gap-16 md:gap-10 gap-3">
                {/* Left Sidebar */}
                <aside class="w-full xl:w-72 flex-shrink-0 mb-8 xl:mb-0">
                    <div
                        class="animate-slide-right opacity-0 -translate-x-5 transition-all duration-700 ease-out"
                    >
                        {
                            /* Header Content - Split layout for < xl, stacked for >= xl */
                        }
                        <div
                            class="flex flex-col md:flex-row xl:flex-col justify-between items-start gap-8 md:gap-24 lg:gap-4 lg:mb-6 md:mb-12 mb-6"
                        >
                            <div class="max-w-lg">
                                <h2
                                    class="text-6xl font-extrabold tracking-tight text-black leading-none mb-6"
                                >
                                    {
                                        isCategoryPage
                                            ? propCategory?.name
                                            : "Nueva colección"
                                    }
                                </h2>
                                <div class="h-1 w-16 bg-[#FF8351]"></div>
                            </div>

                            <div class="max-w-md md:mt-4 xl:mt-6">
                                <p
                                    class="text-zinc-500 text-sm leading-relaxed"
                                >
                                    {
                                        isCategoryPage
                                            ? propCategory?.description ||
                                              "Descubre nuestras soluciones de iluminación."
                                            : "Descubre las últimas soluciones en iluminación para proyectos comerciales e industriales."
                                    }
                                </p>
                            </div>
                        </div>

                        <div
                            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:flex xl:flex-col gap-x-8 gap-y-0 sm:gap-y-2 md:gap-4 xl:gap-1 xl:space-y-1"
                        >
                            {
                                isCategoryPage && (
                                    <div class="col-span-1 sm:col-span-2 md:col-span-1 xl:w-full xl:mb-4">
                                        <a
                                            href="/productos"
                                            class="w-full flex items-center justify-between text-left py-2 hover:text-[#FF8351] transition-colors group border-b border-zinc-100 xl:border-none"
                                        >
                                            <span class="text-base text-zinc-900 group-hover:text-[#FF8351] transition-all">
                                                Todos los productos
                                            </span>
                                            <span class="text-black font-bold text-sm">
                                                {dbProducts.length}
                                            </span>
                                        </a>
                                        <div class="h-1 w-16 bg-[#FF8351] mt-1 hidden xl:block" />
                                    </div>
                                )
                            }
                            {
                                categories.map((category) => (
                                    <a
                                        href={`/productos/${category.slug}`}
                                        class={`w-full flex items-center justify-between text-left py-2 hover:text-[#FF8351] transition-colors group border-b border-zinc-100 xl:border-none ${isCategoryPage && propCategory?.id === category.id ? "text-[#FF8351]" : ""}`}
                                    >
                                        <span
                                            class={`text-base group-hover:text-[#FF8351] transition-all ${isCategoryPage && propCategory?.id === category.id ? "text-[#FF8351] font-bold" : "text-zinc-900"}`}
                                        >
                                            {category.name}
                                        </span>
                                        <span
                                            class={`font-bold text-sm ${isCategoryPage && propCategory?.id === category.id ? "text-[#FF8351]" : "text-black"}`}
                                        >
                                            {category.count}
                                        </span>
                                    </a>
                                ))
                            }
                        </div>
                    </div>
                </aside>

                {/* Products Grid */}
                <div class="flex-1">
                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                    >
                        {
                            productsByCategory.map((categoryGroup) => (
                                <>
                                    {/* Category Card */}
                                    {isCategoryPage ? (
                                        <div
                                            id={`category-${categoryGroup.id}`}
                                            class="product-card group relative bg-[#FF8351] flex items-center justify-center aspect-square opacity-0 translate-y-8 ease-out scroll-mt-32"
                                        >
                                            <div class="text-center p-8">
                                                <h3 class="text-white font-bold text-3xl tracking-tight leading-tight">
                                                    {categoryGroup.category}
                                                </h3>
                                                <div class="mt-6 inline-flex items-center justify-center w-12 h-12 bg-white text-black transition-transform">
                                                    <ArrowRight class="w-5 h-5" />
                                                </div>
                                            </div>
                                        </div>
                                    ) : (
                                        <a
                                            id={`category-${categoryGroup.id}`}
                                            href={`/productos/${categoryGroup.slug}`}
                                            class="product-card group relative bg-[#FF8351] cursor-pointer flex items-center justify-center aspect-square hover:bg-[#ff6a31] transition-all duration-300 opacity-0 translate-y-8 ease-out scroll-mt-32"
                                        >
                                            <div class="text-center p-8">
                                                <h3 class="text-white font-bold text-3xl tracking-tight leading-tight">
                                                    {categoryGroup.category}
                                                </h3>
                                                <div class="mt-6 inline-flex items-center justify-center w-12 h-12 bg-white text-black group-hover:scale-110 transition-transform">
                                                    <ArrowRight class="w-5 h-5" />
                                                </div>
                                            </div>
                                        </a>
                                    )}

                                    {/* Category Products */}
                                    {categoryGroup.products.map((product) => (
                                        <div class="product-card group relative bg-white cursor-pointer opacity-0 translate-y-8 transition-all duration-700 ease-out">
                                            {/* Product Image Container */}
                                            <div class="relative aspect-square bg-zinc-50 flex items-end justify-center overflow-hidden">
                                                {/* Technical Specs Badges - Top Left */}
                                                <div class="absolute inset-0 pointer-events-none z-10">
                                                    {/* Key specs at top left */}
                                                    <div class="absolute top-4 left-4 flex gap-2">
                                                        <div class="bg-black/80 backdrop-blur-sm px-3 py-1.5 border-l-2 border-[#FF8351]">
                                                            <span class="text-white text-xs font-bold">
                                                                {
                                                                    product
                                                                        .specs[0]
                                                                }
                                                            </span>
                                                        </div>
                                                        <div class="bg-black/80 backdrop-blur-sm px-3 py-1.5 border-l-2 border-[#FF8351]">
                                                            <span class="text-white text-xs font-bold">
                                                                {
                                                                    product
                                                                        .specs[1]
                                                                }
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <img
                                                    src={product.image}
                                                    alt={product.name}
                                                    class="w-[180%] h-[180%] object-contain object-bottom drop-shadow-2xl transition-transform duration-700 group-hover:scale-105"
                                                />

                                                {/* Hover Overlay - Clickable Area */}
                                                <a
                                                    href={`/productos/${categoryGroup.slug}/${product.slug}`}
                                                    class="absolute inset-0 bg-black/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-center p-6 text-white z-10"
                                                >
                                                    <p class="text-xs leading-relaxed text-center mb-4 text-white/90">
                                                        {product.description}
                                                    </p>

                                                    <div class="flex flex-wrap gap-2 justify-center mb-5">
                                                        {product.specs.map(
                                                            (spec, index) => (
                                                                <span
                                                                    class={`text-[10px] font-bold bg-white/20 px-2.5 py-1 ${index === 3 ? "xl:hidden 2xl:inline-block" : ""}`}
                                                                >
                                                                    {spec}
                                                                </span>
                                                            ),
                                                        )}
                                                    </div>

                                                    <div class="xl:hidden 2xl:inline-flex bg-[#FF8351] hover:bg-[#ff6a31] text-white px-8 py-3 font-bold text-xs uppercase tracking-widest inline-flex items-center gap-2 transition-all">
                                                        Ver detalles
                                                        <ArrowRight class="w-4 h-4" />
                                                    </div>

                                                    {/* Button for 1280px - 1536px range */}
                                                    <div class="hidden xl:inline-flex 2xl:hidden items-center gap-2 text-[#FF8351] hover:text-[#ff6a31] transition-colors text-[10px] font-bold uppercase tracking-wider group/btn border-b border-transparent hover:border-[#FF8351]">
                                                        Ver Detalles
                                                        <ArrowRight class="w-3 h-3 group-hover/btn:translate-x-0.5 group-hover/btn:-translate-y-0.5 transition-transform" />
                                                    </div>
                                                </a>
                                            </div>

                                            {/* Product Info */}
                                            <div class="pt-2 flex items-end justify-between">
                                                <p class="text-[11px] text-zinc-900 uppercase tracking-wide">
                                                    {product.name}
                                                </p>
                                                <p class="text-[9px] text-zinc-400 uppercase tracking-wider">
                                                    {product.comment}
                                                </p>
                                            </div>
                                        </div>
                                    ))}
                                </>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const observerOptions = {
        root: null,
        rootMargin: "0px",
        threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                // Slide Right Animation
                if (entry.target.classList.contains("animate-slide-right")) {
                    entry.target.classList.remove(
                        "opacity-0",
                        "-translate-x-5",
                    );
                }
                // Fade Up Animation
                if (entry.target.classList.contains("product-card")) {
                    entry.target.classList.remove("opacity-0", "translate-y-8");
                }
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document
        .querySelectorAll(".animate-slide-right, .product-card")
        .forEach((el) => {
            observer.observe(el);
        });
</script>
