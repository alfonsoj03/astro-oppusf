---
import { ArrowRight, MapPin, Sun } from "lucide-astro";
import heroBg from "../assets/b9f87d67fa36b578fc899193ed536f1e87f40b82.png";
import { HeroInteractive } from "./HeroInteractive";
---

<section class="relative h-screen w-full overflow-hidden bg-black text-white">
    {/* Background Image */}
    <div class="absolute inset-0 z-0">
        <img
            src={heroBg.src}
            alt="Opplux Solar Street Light"
            class="w-full h-full object-cover opacity-80"
        />
        {/* Interactive Component - Loaded on client */}
        <HeroInteractive client:load />

        {/* Gradient Overlay for Readability */}
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/80"
        >
        </div>
    </div>

    {/* Main Content */}
    <div
        class="relative z-10 container mx-auto px-6 h-full flex flex-col items-center justify-center"
    >
        {/* Top Label - Nordic Style */}
        <div
            class="absolute top-32 md:top-40 flex items-center gap-4 text-xs font-bold tracking-[0.2em] uppercase text-white/60 animate-fade-in-down"
        >
            <span class="w-12 h-[1px] bg-white/60"></span>
            <span>Colección 2025</span>
            <span class="w-12 h-[1px] bg-white/60"></span>
        </div>

        {/* Center Title */}
        <div class="text-center flex flex-col items-center gap-6 max-w-5xl">
            <h1
                class="text-6xl md:text-8xl lg:text-9xl font-bold tracking-tighter leading-[0.9] animate-scale-in"
            >
                <span class="block">Energía</span>

                {/* Pura - Static Gradient */}
                <span
                    class="block text-transparent bg-clip-text bg-gradient-to-r from-white via-[#FF8351] to-white"
                >
                    Pura
                </span>
            </h1>
        </div>

        {/* Bottom CTA */}
        <div class="absolute bottom-20 md:bottom-24 animate-fade-in-up">
            <button
                class="relative group flex items-center gap-4 bg-white/10 backdrop-blur-md border border-white/20 text-white px-8 py-4 rounded-full overflow-hidden transition-all duration-500"
            >
                {/* Shadow Gradient Layer */}
                <div
                    class="absolute inset-0 bg-gradient-to-r from-[#FF8351] to-[#922CDC] opacity-0 group-hover:opacity-80 transition-opacity duration-500 z-0"
                >
                </div>

                <div class="relative z-10 flex items-center gap-4">
                    <span
                        class="font-bold tracking-wider uppercase text-sm group-hover:text-white transition-colors"
                    >
                        Ver Catálogo 2025
                    </span>
                    <div
                        class="bg-white text-black rounded-full p-1 group-hover:bg-white/20 group-hover:text-white transition-colors"
                    >
                        <ArrowRight size={14} />
                    </div>
                </div>
            </button>
        </div>

        {/* Floating Details */}
        <div
            class="absolute bottom-12 left-6 md:left-12 hidden md:block animate-fade-in-left"
        >
            <div class="flex flex-col gap-2 text-xs text-white/60 font-mono">
                <div class="flex items-center gap-2">
                    <MapPin size={12} className="text-[#FF8351]" />
                    <span>Diseñado en México</span>
                </div>
                <div class="flex items-center gap-2">
                    <Sun size={12} className="text-[#FF8351]" />
                    <span>Autonomía Solar 12h+</span>
                </div>
            </div>
        </div>

        <div
            class="absolute bottom-12 right-6 md:right-12 hidden md:block text-right animate-fade-in-right"
        >
            <div
                class="flex flex-col gap-2 text-xs text-white/60 font-mono uppercase"
            >
                <p>Serie Opplux Pro</p>
                <p>Modelo: OX-200W</p>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .animate-fade-in-down {
        animation: fadeInDown 0.8s ease-out 0.2s forwards;
        opacity: 0; /* Start hidden */
    }

    .animate-scale-in {
        animation: scaleIn 1s ease-out forwards;
        opacity: 0;
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out 0.6s forwards;
        opacity: 0;
    }

    .animate-fade-in-left {
        animation: fadeInLeft 1s ease-out 1s forwards;
        opacity: 0;
    }

    .animate-fade-in-right {
        animation: fadeInRight 1s ease-out 1s forwards;
        opacity: 0;
    }
</style>
