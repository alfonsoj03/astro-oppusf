<section class="flex flex-col md:flex-row min-h-[600px]">
    <div class="relative flex-1 group overflow-hidden bg-black">
        <img
            src="https://images.unsplash.com/photo-1724050168307-25389c9d89e1?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxzb2xhciUyMHBhbmVsJTIwYWVzdGhldGljfGVufDF8fHx8MTc2NDM2MjgxOHww&ixlib=rb-4.1.0&q=80&w=1080"
            alt="Energía"
            class="absolute inset-0 w-full h-full object-cover opacity-50 transition-transform duration-700 group-hover:scale-105"
        />
        <div
            class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors"
        >
        </div>
        <div
            class="absolute inset-0 flex flex-col items-center justify-center text-center p-6"
        >
            <h2
                class="text-4xl lg:text-6xl font-bold text-white tracking-tighter uppercase mb-4 animate-fade-in-up"
            >
                Energía &<br />Redes
            </h2>
            <button
                class="lg:px-8 lg:py-3 px-4 py-2 lg:border-2 border-1 border-white text-white font-bold uppercase tracking-widest hover:bg-white hover:text-black transition-colors"
            >
                Explorar
            </button>
        </div>
    </div>

    <div
        class="relative flex-1 group overflow-hidden bg-black border-l border-white/10"
    >
        <img
            src="https://images.unsplash.com/photo-1761956424995-7e4543a1ed8c?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxmdXR1cmlzdGljJTIwYXJjaGl0ZWN0dXJhbCUyMGxpZ2h0aW5nfGVufDF8fHx8MTc2NDM2MjgxOHww&ixlib=rb-4.1.0&q=80&w=1080"
            alt="Iluminación"
            class="absolute inset-0 w-full h-full object-cover opacity-50 transition-transform duration-700 group-hover:scale-105"
        />
        <div
            class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors"
        >
        </div>
        <div
            class="absolute inset-0 flex flex-col items-center justify-center text-center p-6"
        >
            <h2
                class="text-4xl lg:text-6xl font-bold text-white tracking-tighter uppercase mb-4 animate-fade-in-up"
            >
                Iluminación<br />By Opplux
            </h2>
            <button
                class="lg:px-8 lg:py-3 px-4 py-2 lg:border-2 border-1 border-white text-white font-bold uppercase tracking-widest hover:bg-white hover:text-black transition-colors"
            >
                Descubrir
            </button>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        view-timeline-name: --fade-in-up;
        view-timeline-axis: block;
        animation: fadeInUp 0.6s ease-out forwards;
        animation-timeline: view();
        animation-range: entry 10% cover 30%;
        opacity: 0; /* Fallback/Start */
    }
</style>
