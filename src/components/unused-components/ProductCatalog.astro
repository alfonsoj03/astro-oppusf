---

<section class="py-20 bg-zinc-900 overflow-hidden">
  <div class="container mx-auto px-6">
    {/* Header with Title and Filters */}
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-12">
      <h2
        class="text-white mb-6 md:mb-0 text-4xl font-bold reveal-on-scroll"
        data-animation="fade-left"
      >
        Luminarias Solares y Viales
      </h2>

      <div
        class="flex gap-3 reveal-on-scroll"
        data-animation="fade-right"
      >
        <button
          data-filter="solar"
          class="filter-btn px-6 py-2.5 rounded-full transition-all bg-[#FF8351] text-white"
        >
          Solares
        </button>
        <button
          data-filter="vial"
          class="filter-btn px-6 py-2.5 rounded-full transition-all bg-zinc-800 text-zinc-400 hover:bg-zinc-700"
        >
          Viales
        </button>
      </div>
    </div>

    {/* Products Grid */}
    <div id="products-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6">
      {products.map((product, index) => (
        <div
          key={product.id}
          data-type={product.type}
          class={`product-card bg-zinc-800/50 border border-zinc-700/50 rounded-lg overflow-hidden hover:border-[#FF8351]/50 transition-all duration-300 group reveal-on-scroll ${product.type !== 'solar' ? 'hidden' : ''}`}
          data-animation="fade-up"
          style={`transition-delay: ${index * 100}ms`}
        >
          {/* Product Image */}
          <div class="aspect-[4/3] bg-zinc-900/50 p-6 flex items-center justify-center overflow-hidden">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-full object-contain group-hover:scale-105 transition-transform duration-500"
              onerror={`this.onerror=null; this.src='${ERROR_IMG_SRC}'; this.parentElement.classList.add('bg-gray-100');`}
            />
          </div>

          {/* Product Info */}
          <div class="p-4 space-y-3">
            {/* Category */}
            <p class="text-zinc-500 text-xs">
              {product.category}
            </p>

            {/* Product Name */}
            <h3 class="text-white text-sm leading-tight line-clamp-3 min-h-[3.75rem]">
              {product.name}
            </h3>

            {/* Stock Status */}
            {product.inStock && (
              <div class="flex items-center gap-1.5">
                <div class="w-1.5 h-1.5 rounded-full bg-emerald-500"></div>
                <span class="text-emerald-500 text-xs uppercase tracking-wide">
                  En existencia
                </span>
              </div>
            )}

            {/* Price */}
            <p class="text-white pt-1">
              $ {product.price} MXN
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .reveal-on-scroll {
    opacity: 0;
    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .reveal-on-scroll[data-animation="fade-left"] {
    transform: translateX(-20px);
  }

  .reveal-on-scroll[data-animation="fade-right"] {
    transform: translateX(20px);
  }

  .reveal-on-scroll[data-animation="fade-up"] {
    transform: translateY(20px);
  }

  .reveal-on-scroll.is-visible {
    opacity: 1;
    transform: translate(0, 0);
  }

  .product-card.hidden {
    display: none;
  }

  .product-card.fade-out {
    opacity: 0;
    transform: scale(0.95);
    transition: all 0.3s ease;
  }

  .product-card.fade-in {
    opacity: 1;
    transform: scale(1);
    transition: all 0.3s ease;
  }
</style>

<script>
  function initProductCatalog() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const productCards = document.querySelectorAll('.product-card');

    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter');

        // Update buttons
        filterButtons.forEach(b => {
          b.classList.remove('bg-[#FF8351]', 'text-white');
          b.classList.add('bg-zinc-800', 'text-zinc-400');
        });
        btn.classList.add('bg-[#FF8351]', 'text-white');
        btn.classList.remove('bg-zinc-800', 'text-zinc-400');

        // Filter products with animation
        productCards.forEach(card => {
          const type = card.getAttribute('data-type');
          
          if (type === filter) {
            card.classList.remove('hidden');
            setTimeout(() => {
              card.classList.remove('fade-out');
              card.classList.add('fade-in');
            }, 10);
          } else {
            card.classList.add('fade-out');
            card.classList.remove('fade-in');
            setTimeout(() => {
              card.classList.add('hidden');
            }, 300);
          }
        });
      });
    });

    // Intersection Observer for scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.reveal-on-scroll').forEach(el => {
      observer.observe(el);
    });
  }

  // Initialize on load and on view transitions
  initProductCatalog();
  document.addEventListener('astro:after-swap', initProductCatalog);
</script>
