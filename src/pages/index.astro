---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Marquee from "../components/Marquee.astro";
import Features from "../components/Features.astro";
import Solutions from "../components/Solutions.astro";
import Projects from "../components/Projects.astro";
import ScalableFeatures from "../components/ScalableFeatures.astro";
import TailoredSolutions from "../components/TailoredSolutions.astro";
import MediaPresence from "../components/MediaPresence.astro";
import Categories from "../components/Categories.astro";
---

<Layout>
	<Hero />
	<Marquee />
	<Projects />
	<Solutions />
	<Features />
	<TailoredSolutions />
	<ScalableFeatures />
	<MediaPresence />
	<Categories />
</Layout>

<!--
    Mode Transition Logic:
    When user visits Home, they transition from landing to e-commerce mode.
    This is the "gate" that allows access to e-commerce features.
-->
<script>
	import { markHomeVisited } from "../lib/mode";

	// Mark that user has visited Home - this transitions them to e-commerce mode
	document.addEventListener("DOMContentLoaded", () => {
		markHomeVisited();
	});
</script>
